{
    "name": "apileon/framework",
    "description": "A lightweight, enterprise-ready PHP framework focused only on REST APIs",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Apileon Team",
            "email": "team@apileon.dev"
        }
    ],
    "keywords": ["php", "framework", "api", "rest", "lightweight"],
    "homepage": "https://apileon.dev",
    "require": {
        "php": ">=8.1",
        "psr/http-message": "^1.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Apileon\\": "src/",
            "App\\": "app/"
        },
        "files": [
            "src/Support/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
